            </Grid.RowDefinitions>

            <Image Source="{local:ImageResource QuestApp1.Images.QuizTime.png}" />
            <Grid Grid.Row="1">
                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Text="Sign Up" Clicked="SignUp_Clicked" HorizontalOptions="Center"/>
                <Button Grid.Row="1" Text="Sign In" Clicked="SignIn_Clicked" HorizontalOptions="Center"/>-->
                <StackLayout>
                    <Button  Text="Sign Up" Clicked="SignUp_Clicked" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
                    <Button  Text="Sign In" Clicked="SignIn_Clicked" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
                </StackLayout>

            </Grid>
            

        </Grid>
    </ContentPage.Content>
