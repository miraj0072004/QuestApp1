                            <!--<Button 
                                    FontFamily="{StaticResource FaFontFamily}"
                                    Text="{x:Static fontawesome:FontAwesomeIcons.SignInAlt}"
                                    TextColor="Black"
                                    FontSize="33"
                                    Command="{Binding SignInCommand}"
