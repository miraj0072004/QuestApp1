                                            <Setter Property="IsToggled" Value="False"/>
                                        </DataTrigger>
                                    </Switch.Triggers>
                                </Switch>
                                

                                <Button Text="Navigate" IsVisible="False">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding Source={x:Reference tokenSwitch}, Path=IsToggled}" Value="True" >
                                            <DataTrigger.EnterActions>
